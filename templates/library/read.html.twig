{% extends 'base.html.twig' %}

{% block title %}Book Details{% endblock %}

{% block body %}
    <h1>{{ book.title }}</h1>
    <p><strong>Författare:</strong> {{ book.author }}</p>
    <p><strong>ISBN:</strong> {{ book.isbn }}</p>
    <p><strong>Bild:</strong></p>
    <img src="{{ asset('images/' ~ book.image) }}" alt="Tom bild" width="150">
    <p><a href="{{ path('library_all') }}"class="button">Tillbaka till alla böcker</a></p>
{% endblock %}
